{
  "name": "vr-nextgen-solutions",
  "version": "1.2.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "cross-env NODE_OPTIONS=\"--max-old-space-size=16384\" next build",
    "start": "next start",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf .next out",
    "format": "prettier --write \"src/**/*.{js,ts,jsx,tsx,json,css,md}\"",
    "format:check": "prettier --check \"src/**/*.{js,ts,jsx,tsx,json,css,md}\"",
    "optimize:images": "node scripts/optimize-images-final.js",
    "optimize:all": "npm run optimize:images",
    "build:optimized": "npm run optimize:all && npm run build",
    "validate:imports": "node scripts/validate-imports.js",
    "validate:imports:verbose": "node scripts/validate-imports.js --verbose",
    "analyze": "cross-env ANALYZE=true npm run build",
    "analyze:server": "cross-env BUNDLE_ANALYZE=server npm run build",
    "analyze:browser": "cross-env BUNDLE_ANALYZE=browser npm run build",
    "prebuild": "npm run validate:imports"
  },
  "dependencies": {
    "@hookform/resolvers": "^5.2.2",
    "framer-motion": "^12.23.22",
    "next": "15.5.4",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "react-hook-form": "^7.63.0",
    "zod": "^4.1.11"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@tailwindcss/postcss": "^4",
    "@types/node": "20.19.24",
    "@types/react": "19.2.2",
    "@types/react-dom": "^19",
    "autoprefixer": "^10.4.21",
    "cross-env": "^7.0.3",
    "eslint": "^9",
    "eslint-config-next": "15.5.4",
    "eslint-plugin-security": "^1.7.1",
    "prettier": "^3.3.3",
    "tailwindcss": "^4",
    "typescript": "5.9.3",
    "webpack-bundle-analyzer": "^4.10.1"
  }
}
